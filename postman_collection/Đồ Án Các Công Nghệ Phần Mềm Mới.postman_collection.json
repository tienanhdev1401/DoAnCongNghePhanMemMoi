				{
					"name": "Login by JWT",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"let response;\r",
									"\r",
									"try {\r",
									"    response = pm.response.json();\r",
									"    if (response.accessToken) {\r",
									"        pm.environment.set(\"accessToken\", response.accessToken);\r",
									"        console.log(\"New Access Token:\", response.accessToken);\r",
									"    }\r",
									"} catch (e) {\r",
									"    console.error(\"Response is not valid JSON:\", e);\r",
									"}\r",
									"\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n  \"email\": \"phanhunganh12aaaa3@gmail.com\",\r\n  \"password\": \"123456\"\r\n}",
